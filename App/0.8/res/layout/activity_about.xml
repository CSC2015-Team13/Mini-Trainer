<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svAbout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bg_rest2" >

<LinearLayout
    android:id="@+id/topLayerAbout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:id="@+id/aboutSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/bg_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/resetProgressText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Project of Team #13"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tm1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Ben Brown"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tm2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Callan White"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tm3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Xiaoquan Ge"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tm4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="David Orizu"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tm5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Mantas Sutula"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tm6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="James Imrie"
            android:textColor="#000000"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tm7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="Viktor Movcan"
            android:textColor="#000000"
            android:textSize="21sp" />

        <Button
            android:id="@+id/btn_resources_used"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Resources used"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_disc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Disclaimer"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/references"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/exercisesTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Exercises"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/ex_source"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dietsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Diets"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/diets_source"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lifestyleTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Lifestyle"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/lifestyle_source"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/quizQuestionsTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Quiz questions"
            android:textColor="#000000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_source"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/disclaimer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_disclaimTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Disclaimer"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_disclaim"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_disclaimre"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>

</ScrollView>