<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab4"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/exdiets"
    android:orientation="vertical"
    android:paddingTop="65dp">
     			    
     		    <TextView
     		        android:id="@+id/text_suggestion"
     		        android:layout_width="fill_parent"
     		        android:layout_height="fill_parent"
     		        android:layout_gravity="center_vertical|center_horizontal"
     		        android:layout_weight="1"
     		        android:gravity="center"
     		        android:paddingLeft="30dp"
     		        android:paddingRight="33dp"
     		        android:paddingTop="11dp"
     		        android:text="@string/text_tab1"
     		        android:textSize="21sp" />

     		    <LinearLayout
     		        android:layout_width="fill_parent"
     		        android:layout_height="fill_parent"
     		        android:layout_weight="0.3"
     		        android:paddingBottom="15dp"
     		        android:paddingLeft="5dp"
     		        android:paddingRight="9dp"
     		        android:paddingTop="11dp" >

     		        <Button
     		            android:id="@+id/exButton"
     		            android:layout_width="fill_parent"
     		            android:layout_height="fill_parent"
     		            android:layout_gravity="left"
     		            android:layout_marginRight="3dp"
     		            android:layout_weight="1"
     		            android:background="@drawable/exercises_button"
     		            android:text="@string/text_exButton"
     		            android:textSize="25sp" />

     		        <Button
     		            android:id="@+id/dButton"
     		            android:layout_width="fill_parent"
     		            android:layout_height="fill_parent"
     		            android:layout_gravity="right"
     		            android:layout_marginLeft="3dp"
     		            android:layout_weight="1"
     		            android:background="@drawable/diets_button"
     		            android:text="@string/text_dButton"
     		            android:textSize="25sp" />

     		    </LinearLayout>

</LinearLayout>